{
  "env": {
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "extends": [
    "prettier",
    "plugin:@typescript-eslint/recommended",
    "airbnb-typescript/base",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "semi": 2,
    "quotes": [2, "single"],
    "no-bitwise": "off",
    "no-plusplus": "off",
    "no-new": "off"
  }
}
