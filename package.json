{
  "name": "retropixels",
  "version": "0.8.0",
  "description": "A cross platform command line tool to convert images to Commodore 64 format.",
  "main": "target/index.js",
  "bin": {
    "retropixels": "./cli.js"
  },
  "scripts": {
    "build": "npx tsc",
    "test": "npx jest",
    "lint": "npx eslint '*/**/*.{js,ts}' --quiet -c .eslintrc.json --no-eslintrc",
    "fix": "npx eslint '*/**/*.{js,ts}' --quiet --fix -c .eslintrc.json --no-eslintrc && npx prettier cli.js --write"
  },
  "dependencies": {
    "commander": "6.2.1",
    "fs-extra": "9.0.1",
    "jimp": "0.16.1",
    "path": "0.12.7"
  },
  "devDependencies": {
    "@types/fs-extra": "9.0.6",
    "@types/node": "14.14.20",
    "@typescript-eslint/eslint-plugin": "4.12.0",
    "@typescript-eslint/parser": "4.12.0",
    "ajv": "7.0.3",
    "c64jasm": "0.8.1",
    "del": "6.0.0",
    "eslint": "7.17.0",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.3.1",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "retire": "2.2.4",
    "ts-jest": "26.4.4",
    "typescript": "4.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/test/.*\\.(ts|tsx|js)$"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/micheldebree/retropixels.git"
  },
  "author": "Michel de Bree",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/micheldebree/retropixels/issues"
  },
  "homepage": "https://github.com/micheldebree/retropixels#readme"
}
