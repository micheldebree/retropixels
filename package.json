{
  "name": "retropixels",
  "version": "0.7.2-SNAPSHOT",
  "description": "A cross platform command line tool to convert images to Commodore 64 format.",
  "main": "target/index.js",
  "bin": {
    "retropixels": "./cli.js"
  },
  "scripts": {
    "build": "npx tsc",
    "test": "npx jest",
    "lint": "npx eslint '*/**/*.{js,ts}' --quiet",
    "fix": "npx eslint '*/**/*.{js,ts}' --quiet --fix"
  },
  "dependencies": {
    "commander": "5.1.0",
    "fs-extra": "9.0.0",
    "jimp": "0.12.1",
    "path": "0.12.7"
  },
  "devDependencies": {
    "@types/fs-extra": "9.0.1",
    "@types/node": "14.0.4",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "ajv": "6.12.2",
    "c64jasm": "0.8.1",
    "del": "5.1.0",
    "eslint": "7.0.0",
    "eslint-config-airbnb-typescript": "7.2.1",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-prettier": "3.1.3",
    "jest": "26.0.1",
    "prettier": "2.0.5",
    "retire": "2.2.1",
    "ts-jest": "26.0.0",
    "typescript": "3.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/test/.*\\.(ts|tsx|js)$"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/micheldebree/retropixels.git"
  },
  "author": "Michel de Bree",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/micheldebree/retropixels/issues"
  },
  "homepage": "https://github.com/micheldebree/retropixels#readme"
}
